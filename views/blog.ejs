<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
    <title>Blog</title>
</head>
<body>
    <%- include("./partials/nav") %>
    <div class="container mt-4">
            <h1><%= blog.title %></h1>
            <img src="<%= blog.coverImageURL %>" alt="" width="100%">
            <pre><%= blog.body %></pre>
    </div>
    <div class="container mt-4">
        <img src="<%= blog.createdBy.profileImageUrl %>" alt="" width="30px" > <%= blog.createdBy.fullName %> - Author
    </div>
    <div class="container mt-3">
    <h1>Comments (<%= comments.length %>)</h1>
    <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="post">
                
                <input type="text" class="form-control" name="content" placeholder="Enter Your Comment">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
        </div>
    <% } %>
    <div class="container mt-3">
        <% comments.forEach(comment => { %>
        <pre><%= comment.content %></pre>
        <% }) %>
    </div>
    <%- include("./partials/scripts") %>
</body>
</html>